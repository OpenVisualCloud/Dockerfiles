# build libpahomqtt
ARG PAHO_VER=1.3.6
ARG LIBPAHO_REPO=https://github.com/eclipse/paho.mqtt.c/archive/v${PAHO_VER}.tar.gz
RUN cd /opt/build && \
  wget -O - ${LIBPAHO_REPO} | tar -xz
