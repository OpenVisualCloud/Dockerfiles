    wget ${OPENCL_GMMLIB_REPO} ${OPENCL_IGC_CORE_REPO} ${OPENCL_IGC_OCL_REPO} ${OPENCL_INTEL_OCL_REPO} && \
    dpkg -i ./*.deb && \
    for x in *.deb; do dpkg-deb -x $x /opt/dist/usr/local; done

